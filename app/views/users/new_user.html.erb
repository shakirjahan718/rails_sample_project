<h1>New User</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for :user, url: 'create_user' do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class:"text_field", size: 40, require: true %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, class:"text_field", size: 40 %>

  <%= f.label :email %>
  <%= f.text_field :email, class:"text_field", size: 40 %>

  <%= f.label :city %>
  <%= f.collection_select :city_id, City.all, :id , :name, prompt: "Please celect city"%>
  <%#= f.select :city_id, City.all.collect(&:name) %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :gender %>
  <%= f.radio_button :gender, "M" %>Male
  <%= f.radio_button :gender, "F" %>Female
  <br><br>
  <%#= f.time_zone_select :timezone %>
  <br>
  <%= f.submit %>
<% end %>